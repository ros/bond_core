<package>
  <name>bondpy</name>
  <version>1.7.4</version>
  <description>
    Python implementation of bond, a mechanism for checking when
    another process has terminated.
  </description>
  <author>Stuart Glaser</author>
  <maintainer email="vrabaud@willowgarage.com">Vincent Rabaud</maintainer>
  <license>BSD</license>
  <url>http://ros.org/wiki/bondpy</url>

  <build_depend>bond</build_depend>
  <build_depend>catkin</build_depend>
  <build_depend>rospy</build_depend>
  <build_depend>smclib</build_depend>

  <run_depend>uuid</run_depend>
  <run_depend>smclib</run_depend>
</package>
